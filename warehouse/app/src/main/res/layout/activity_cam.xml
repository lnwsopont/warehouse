<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muicsenior.warehouse.activities.CamActivity"
    android:padding="10dp">

    <LinearLayout
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scan QR Code in format [ wh::123:456 ]" />

        <SurfaceView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:id="@+id/camera_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_scan_format_status"
            android:textSize="12sp"
            android:textColor="@color/wrong_scan"
            android:text="wrong format !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:text="QR Code"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="32sp"
            android:id="@+id/tv_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:visibility="gone"
            android:textSize="32sp"
            android:id="@+id/et_qr_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_ok"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/btn_disable"
                android:enabled="false"
                android:layout_margin="2dp"
                android:text="OK !" />

            <Button
                android:id="@+id/btn_manual"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#a9a9a9"
                android:layout_margin="2dp"
                android:text="manual" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
